<UserControl x:Class="WeSplit.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeSplit"
             mc:Ignorable="d" Height="35" Width="40">
    <UserControl.Resources>

    </UserControl.Resources>
    <Viewbox Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="40">
        <Grid HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="40">
            <Rectangle x:Name="Back" Fill="#FF999999" HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="40" RadiusY="6.125" RadiusX="6.125"/>
            <Ellipse MouseLeftButtonDown="Dot_MouseLeftButtonDown" x:Name="Dot" Fill="#FFFFF7F7" HorizontalAlignment="Center" Height="15" VerticalAlignment="Center" Width="16" Margin="12,0,12,5"/>
        </Grid>

    </Viewbox>
</UserControl>
