<UserControl x:Class="WeSplit.User_Control.MemberUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeSplit.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Initialized="UserControl_Initialized">
    <Grid>
        <Border Background="Transparent"
                Margin="50"
                CornerRadius="50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Background="#C3C3C3" FontSize="30" FontWeight="Bold" HorizontalContentAlignment="Center">DANH SÁCH THÀNH VIÊN</Label>
                <ListView Name="listMember"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          SizeChanged="listMember_SizeChanged"
                          Grid.Row="1"
                          HorizontalAlignment="Center" SelectionChanged="listMember_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="MÃ TV" DisplayMemberBinding="{Binding MATV}"/>
                            <GridViewColumn Header="TÊN THÀNH VIÊN" DisplayMemberBinding="{Binding TENTV}"/>
                            <GridViewColumn Header="SỐ ĐIỆN THOẠI" DisplayMemberBinding="{Binding SDT}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button HorizontalAlignment="Right" Click="addMemberButton_Click" Grid.Row="2" Width="200">THÊM THÀNH VIÊN</Button>
            </Grid>
        </Border>
        
        
    </Grid>
</UserControl>
