<UserControl x:Class="WeSplit.User_Control.siteUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeSplit.User_Control"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="DANH SÁCH CÁC ĐỊA DANH DU LỊCH"
                   HorizontalAlignment="Center"
                   FontSize="30"
                   Foreground="#0133CD"
                   FontWeight="Bold"
                   VerticalAlignment="Center"/>
        <Border Background="Transparent"
                Grid.Row="1"
                Margin="180 0 40 0"
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  Opacity=".2"/>
            </Border.Effect>
            <DataGrid Margin="20"
                      Background="Transparent"
                      Name="listPlace"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="MÃ ĐỊA DANH"
                                        Foreground="#0133CD"
                                        Binding="{Binding MA_DIEMDEN}"/>
                    <DataGridTextColumn Header="TÊN ĐỊA DANH"
                                        Foreground="#0133CD"
                                        Binding="{Binding TEN_DIEMDEN}"/>
                    <DataGridTextColumn Header="ĐỊA CHỈ"
                                        Foreground="#0133CD"
                                        Binding="{Binding DCHI_DIEMDEN}"/>
                    <DataGridTextColumn Header="THÔNG TIN"
                                        Foreground="#0133CD"
                                        Binding="{Binding THONGTIN_DD}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <Button Grid.Row="2"
                HorizontalAlignment="Right"
                Margin="0 0 20 0"
                Width="150"
                Click="buttonAdd"
                Background="#0133CD">
            <TextBlock Text="THÊM ĐỊA ĐIỂM"
                       VerticalAlignment="Center"/>
        </Button>
    </Grid>
</UserControl>
