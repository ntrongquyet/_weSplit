<Window x:Class="WeSplit.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeSplit"
        mc:Ignorable="d"
        Title="SplashScreen" Height="600" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        RenderOptions.BitmapScalingMode="HighQuality"
        WindowStartupLocation="CenterScreen"
        Foreground="#000333">
    <Window.Background>
        <ImageBrush ImageSource="/Image/SplashScreen/background_SplashScreen.png"  Stretch="Fill" />
    </Window.Background>
    <Grid>
        <ToggleButton VerticalAlignment="Top"
                      Name="check"
                      HorizontalAlignment="Right"
                      Margin="0 20 20 0"
                      Click="Check"
                      Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"
                      ToolTip="MaterialDesignSwitchDarkToggleButton"
                      IsChecked="False"/>
        <Rectangle Width="230" Height="120" VerticalAlignment="Top" Margin="0 80 0 0" RadiusY="15" RadiusX="15">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Image/Main/Image 5@2x.png" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <Grid Width="230" Height="120" VerticalAlignment="Top"  Margin="0 80 0 0">
            <Rectangle Fill="#CC0133CD"   RadiusY="15" RadiusX="15"/>
            <Label Content="ĐÀ NẴNG" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                   Foreground="#FFFFFF" FontSize="30" FontWeight="Bold"/>
        </Grid>
        <TextBlock Width="350" Margin="0 210 0 0" TextWrapping="WrapWithOverflow" Foreground="#FF6665"
            Text="Du lịch Hội An chưa bao giờ hết hot với nhiều địa điểm lưu giữ lịch sử, không thể không kể đến Rừng dừa Bảy Mẫu, một nơi mà bạn chắc chắn sẽ thích thú khi được khám phá cảnh quan tuyệt đẹp và còn được chèo thuyền thúng để thử cái cảm giác lâng lâng khi lênh đênh trên sông nước nữa đấy."/>
        <Rectangle x:Name="rectangle1" Fill="#FFF4F4F5"  HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                   Height="10" Width="400" />
        <Rectangle x:Name="rectangle2" Fill="#003FFF"  HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                   Height="10" Width="0"/>
    </Grid>
</Window>
