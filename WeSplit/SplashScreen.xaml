<Window x:Class="WeSplit.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeSplit"
        mc:Ignorable="d"
        Title="SplashScreen" Height="500" Width="700"
        WindowStyle="None"
        ResizeMode="NoResize"
        RenderOptions.BitmapScalingMode="HighQuality"
        WindowStartupLocation="CenterScreen"
        Foreground="#000333">
    <Window.Background>
        <ImageBrush ImageSource="/Image/SplashScreen/Plashcreen.png" Stretch="Fill" />
    </Window.Background>
    <Grid>
        <Label Content="Chọn để không hiện thị lần tới" Margin="458,6,60,468" />
        <Rectangle x:Name="rectangle1" Fill="#FFF4F4F5" Stroke="#000333" HorizontalAlignment="Left" Height="10" VerticalAlignment="Top" Width="700" Margin="0,491,0,-1"/>
        <Rectangle x:Name="rectangle2" Fill="#3692AC" Stroke="#000333" HorizontalAlignment="Left" Height="10" VerticalAlignment="Top" Width="0" Margin="0,491,0,-1"/>
    </Grid>
</Window>
